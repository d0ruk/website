{
  "name": "@doruk/website",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rebass/grid": "^6.0.0-7",
    "canvas-nest.js": "^2.0.4",
    "gridlex": "^2.7.1",
    "node-fetch": "^2.3.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styled-components": "^4.1.3",
    "typeface-balthazar": "^0.0.71",
    "typeface-nova-square": "^0.0.71"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:client": "rescripts start",
    "start:server": "netlify-lambda serve src/functions -c server-config.js",
    "build": "npm run clean && run-s build:*",
    "build:client": "rescripts build",
    "build:server": "netlify-lambda build src/functions",
    "test": "rescripts test",
    "lint": "eslint src",
    "eject": "react-scripts eject",
    "clean": "rimraf .cache build"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "max-len": [
        2,
        80,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.7",
    "@rescripts/rescript-env": "^0.0.3",
    "babel-loader": "^8.0.4",
    "dotenv": "^6.2.0",
    "netlify-lambda": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "react-hot-loader": "^4.6.3",
    "react-scripts": "2.1.2",
    "rimraf": "^2.6.2"
  },
  "rescripts": [
    "env"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d0ruk/website.git"
  },
  "author": "Doruk Kutlu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d0ruk/website/issues"
  },
  "homepage": "http://doruk.me",
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  }
}
