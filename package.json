{
  "name": "@doruk/website",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@rebass/grid": "^6.0.0-7",
    "alfa": "^0.6.1",
    "canvas-nest.js": "^2.0.4",
    "node-fetch": "^2.3.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-toastify": "^4.5.1",
    "styled-components": "^4.1.3",
    "typeface-balthazar": "^0.0.71",
    "typeface-nova-square": "^0.0.71"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:client": "craco start --verbose",
    "start:server": "netlify-lambda serve src/functions",
    "build": "npm run clean && run-s build:*",
    "build:client": "craco build",
    "build:server": "NODE_ENV=production netlify-lambda build src/functions",
    "test": "npm run lint && craco test",
    "lint": "eslint src",
    "eject": "react-scripts eject",
    "clean": "rimraf .cache build"
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "__env": true
    },
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "max-len": [
        2,
        80,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@craco/craco": "^3.2.3",
    "craco-plugin-react-hot-reload": "^0.0.3",
    "craco-preact": "^1.1.0",
    "dotenv": "^6.2.0",
    "git-revision-webpack-plugin": "^3.0.3",
    "license-webpack-plugin": "^2.0.4",
    "netlify-lambda": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "react-hot-loader": "^4.6.3",
    "react-scripts": "2.1.1",
    "rimraf": "^2.6.2",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d0ruk/website.git"
  },
  "author": "Doruk Kutlu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d0ruk/website/issues"
  },
  "homepage": "http://doruk.me",
  "proxy": "http://localhost:9000"
}
